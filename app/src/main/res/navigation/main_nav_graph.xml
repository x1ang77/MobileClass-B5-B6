<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">
    <action
        android:id="@+id/to_home_fragment"
        app:destination="@+id/homeFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.joel.projectnotes.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_addItem"
            app:destination="@id/addItemFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
        <action
            android:id="@+id/action_home_to_details"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
    </fragment>
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.joel.projectnotes.ui.AddItemFragment"
        android:label="fragment_add_item"
        tools:layout="@layout/fragment_add_item">
        <action
            android:id="@+id/action_addItem_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.joel.projectnotes.ui.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_details_to_editItem"
            app:destination="@id/editItemFragment" />
        <action
            android:id="@+id/action_details_to_home"
            app:destination="@id/homeFragment" />
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/editItemFragment"
        android:name="com.joel.projectnotes.ui.EditItemFragment"
        android:label="fragment_edit_item"
        tools:layout="@layout/fragment_edit_item">
        <action
            android:id="@+id/action_editItem_to_details"
            app:destination="@id/detailsFragment" />
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
</navigation>