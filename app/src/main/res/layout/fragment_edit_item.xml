<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".ui.EditItemFragment">

    <TextView
        android:id="@+id/tv_edit_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@color/app_cream"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/app_edit_note"
        android:textSize="26sp" />

    <RelativeLayout
        android:id="@+id/rl_edit_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cl_edit_colors"
        android:layout_below="@id/tv_edit_details"
        android:layout_margin="32dp">

        <EditText
            android:id="@+id/et_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00000000"
            android:hint="@string/app_add_title"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_edit_title"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00000000"
            android:hint="@string/app_add_description"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_edit_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <View
            android:id="@+id/view_edit_green"
            android:layout_width="0dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/view_green"
            android:contentDescription="Green"
            app:layout_constraintBottom_toTopOf="@+id/btn_edit_edit"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/view_edit_blue"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_edit_blue"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/view_blue"
            android:contentDescription="Blue"
            app:layout_constraintBottom_toTopOf="@+id/btn_edit_edit"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/view_edit_red"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view_edit_green"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_edit_red"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/view_red"
            android:contentDescription="Red"
            app:layout_constraintBottom_toTopOf="@+id/btn_edit_edit"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/view_edit_purple"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view_edit_blue"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_edit_purple"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/view_purple"
            android:contentDescription="Purple"
            app:layout_constraintBottom_toTopOf="@+id/btn_edit_delete"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/view_edit_yellow"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view_edit_red"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_edit_yellow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/view_yellow"
            android:contentDescription="Yellow"
            app:layout_constraintBottom_toTopOf="@+id/btn_edit_delete"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view_edit_purple"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_edit_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/btn_primary"
            android:text="@string/app_save"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_edit_delete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_edit_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/btn_delete"
            android:text="@string/app_delete"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_edit_edit" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>