<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:padding="30dp"
    tools:context=".fragments.ui.EditFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/mint"
        app:cardCornerRadius="15dp"
        app:cardElevation="4sp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:inputType="textMultiLine"
                android:padding="4sp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/etTitle"
                android:background="#00FFFFFF"
                android:gravity="top"
                android:hint="Details"
                android:inputType="textMultiLine"
                android:padding="4sp"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8sp"
        android:layout_marginEnd="4sp"
        android:backgroundTint="@color/black"
        app:icon="@drawable/ic_check"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:flexWrap="wrap"
        app:flexDirection="row"
        app:justifyContent="space_between"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnBrown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8sp"
            android:backgroundTint="@color/brown"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/brown" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnMauve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:layout_marginVertical="8sp"
            android:backgroundTint="@color/mauve"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/mauve" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnBlush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:layout_marginVertical="8sp"
            android:backgroundTint="@color/blush"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/blush" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnMint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:layout_marginVertical="8sp"
            android:backgroundTint="@color/mint"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/mint" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnIce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:layout_marginVertical="8sp"
            android:backgroundTint="@color/ice"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/ice" />

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8sp"
        android:backgroundTint="#D81B60"
        app:icon="@drawable/ic_delete"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>